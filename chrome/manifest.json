{
	"manifest_version": 2,

	"name": "Coinbase Reddit Tipper",
	"description": "Send tips to redditers using Coinbase!",
	"version": "1.0",
	"offline_enabled": false,

	"permissions": [
		"http://www.reddit.com/",
		"https://coinbase.com/",
		"storage",
		"tabs"
	],

	"content_scripts": [
		{
			"matches": ["http://www.reddit.com/*"],
			"js": ["jquery.js", "reddit_inject.js"]
		}
	],

	"web_accessible_resources": [ "ajax-loader.gif" ]
}
